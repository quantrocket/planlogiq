  <!-- configurations for modules -->
  <modules>	  	
        <module class="System.Data.TDataSourceConfig" id="db1">
            <database ConnectionString="mysql:host=localhost;dbname=planlogiq" Username="root" Password="admin" />
        </module>
        <module id="Globalization" class="TGlobalization" DefaultCulture="de_DE" Culture="de_DE" DefaultCharset="UTF-8">
            <translation type="Database" autosave="true" cache="false" source="db1" />
        </module>

        <module id="cache" class="System.Caching.TDbCache" ConnectionID="db1" />
        <!--module id="session"
            class="System.Web.THttpSession"
            SessionName="SSID"
            CookieMode="Allow"
            AutoStart="true"
            GCProbability="1"
            UseTransparentSessionID="true"
            TimeOut="3600" /-->
        <module class="System.Data.ActiveRecord.TActiveRecordConfig" ConnectionID="db1" EnableCache="true"></module>

        <module id="auth" class="System.Security.TAuthManager" UserManager="users" LoginPage="Home" />
        <module id="users" class="System.Security.TDbUserManager" UserClass="GSProcUser" />

        <module id="log" class="System.Util.TLogRouter">
            <route class="TBrowserLogRoute" Categories="System" Levels="ERROR, FATAL" /> <!--ALERT, DEBUG, NOTICE, WARNING, /-->
        </module>

    </modules>

  <!-- configuration for available services -->
    <services>
        <service id="page" class="TPageService" DefaultPage="Home">
            <!--pages StatePersisterClass="System.Web.UI.TCachePageStatePersister"
                   StatePersister.CacheModuleID="cache"
                   MasterClass="Application.layouts.MainLayout" /-->
            <pages MasterClass="Application.layouts.MainLayout" />
            <module id="theme" class="System.Web.UI.TThemeManager" />
        </service>

        <service id="soap" class="System.Web.Services.TSoapService">
            <!--soap id="QVTicketSecure" provider="Application.webservices.QVTicketSecure" /-->
            <soap id="QVHPMailer" provider="Application.webservices.QVHPMailer" />
        </service>

        <!--service id="report" class="Application.common.TReportingService">
            <report id="profit" class="Application.pages.reports.workbook.ProfitReport" format="Excel2007" />
        </service-->

        <service id="graph" class="Application.common.GraphService" Width="500" Height="300" Shadow="false" />
        <service id="gantt" class="Application.common.GanttService" Width="800" Height="0" Shadow="false" />
        <service id="bubble" class="Application.common.BubbleService" Width="800" Height="400" Shadow="false" />
    </services>

