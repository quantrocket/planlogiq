				<com:TRepeater ID="RepZiele3" OnItemDataBound="page.bindRepeaterZiele4" EnableViewState="false">
				
					<prop:HeaderTemplate>
						<table width="100%">
					</prop:HeaderTemplate>
					
					<prop:ItemTemplate>
						<tr>
							<td width="150px" style="background-color:#efefef"><com:TLiteral Text="<%#$this->data->zie_name%>" /></td>
							<td>
					
					<!-- Ziele Level4 /-->				
					
						<com:TRepeater ID="RepZiele4" OnItemDataBound="page.bindRepeaterAufgabenZiele" EnableViewState="false">
						
							<prop:HeaderTemplate>
								<table width="100%">
								<thead>
									<tr>
										<td>Name</td>
									</tr>
									<tr>
										<td>Beschreibung</td>
									</tr>
								</thead>
							</prop:HeaderTemplate>
							
							<prop:ItemTemplate>
							
							<tr style="background-color:#ffffff">
								<td><b><com:TLiteral Text="<%#$this->data->ttzie_name%>" /></b></td>
							</tr>
							<tr>
								<td style="border-bottom:1px double grey;"><com:TLiteral Text="<%#$this->data->ttzie_descr%>" /></td>
							</tr>
							
							<tr><td>
							
									<!-- AufgabenZiele Level /-->				
							
								<com:TRepeater ID="RepAufZiele" EnableViewState="false">
								
									<prop:HeaderTemplate>
										<table width="100%" border="0">
										<thead>
											<tr>
												<td width="150">Name</td>
												<td>Beschreibung</td>
												<td>Wer</td>
												<td>Prio</td>
												<td>Bis</td>
											</tr>
										</thead>
									</prop:HeaderTemplate>
									
									<prop:ItemTemplate>
									
									<tr style="background-color:#ffffff;border-bottom:1px dotted grey;">
										<td><b><com:TLiteral Text="<%#$this->data->auf_name%>" /></b></td>
										<td><com:TLiteral Text="<%#$this->data->auf_beschreibung%>" /></td>
										<td><com:TLiteral Text="<%#OrganisationRecord::finder()->findByPK($this->data->idtm_organisation)->org_name%>" /></td>
										<td><com:TLiteral Text="<%#$this->data->auf_priority%>" /></td>
										<td><com:TLiteral Text="<%#$this->data->auf_tdate%>" /></td>
									</tr>
									
									</prop:ItemTemplate>
									
									<prop:FooterTemplate>
										</table>
									</prop:FooterTemplate>
									
								</com:TRepeater>
									
								<!-- AufgabenZiele Level /-->
									
							</td></tr>
							
							</prop:ItemTemplate>
							
							<prop:FooterTemplate>
								</table>
							</prop:FooterTemplate>
							
						</com:TRepeater>
							
					<!-- Ziele Level4 /-->
					
					</td></tr>
					
					</prop:ItemTemplate>
					
					<prop:FooterTemplate>
						</table>
					</prop:FooterTemplate>
					
				</com:TRepeater>
						
			<!-- Ziele Level3 /-->
					
			
			</td></tr>
			
			</prop:ItemTemplate>
			
			<prop:FooterTemplate>
				</table>
			</prop:FooterTemplate>
			
		</com:TRepeater>
		<!-- Ziele Level2 /-->
		
		</td></tr>
	
	</prop:ItemTemplate>

<!-- Ende des Repeater Ziele /-->	
	
	<prop:FooterTemplate>
		</table>
	</prop:FooterTemplate>

</com:TRepeater>
