				<table width="100%">
			</prop:HeaderTemplate>
			
			<prop:ItemTemplate>
			<tr style="background-color:#cdcdcd">
				<td width="160px">Zielklasse:</td>
				<td><com:TLiteral Text="<%#$this->data->zie_name%>" /></td>
