	<prop:HeaderTemplate>
		<table width="100%">
	</prop:HeaderTemplate>
	
	<prop:ItemTemplate>
		<tr style="background-color:#bcbcbc">
			<td width="140px">Globalziel:</td>
			<td><com:TLiteral Text="<%#$this->data->zie_name%>" /></td>
		</tr>
		<tr>
			<td colspan="2"><com:TLiteral Text="<%#$this->data->zie_descr%>" /></td>
		</tr>
		<tr><td colspan="2">
		
	<!--Ziele Level2/-->
	
		<com:TRepeater ID="RepZiele2" OnItemDataBound="page.bindRepeaterZiele3" EnableViewState="false">
		
