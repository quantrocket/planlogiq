    PageSize="1000"
    EnableViewState="false"
    OnItemDataBound="bindRepeaterOrganisation2">
	
	<prop:HeaderTemplate>
		<table width="100%">
	</prop:HeaderTemplate>
	
	<prop:ItemTemplate>
		<tr style="background-color:#cdcdcd">
			<td width="140px">Organisation:</td>
			<td><com:TLiteral Text="<%#$this->data->org_name%>" /></td>
			<td><com:TLiteral Text="<%#$this->data->idtm_organisation%>" /></td>
		</tr>
		<tr><td colspan="3">
		
	<!--Organisation Level2/-->
	
		<com:TRepeater ID="RepOrganisation2" OnItemDataBound="page.bindRepeaterOrganisation3" EnableViewState="false">
		
			<prop:HeaderTemplate>
				<table width="100%">
			</prop:HeaderTemplate>
			
			<prop:ItemTemplate>
			<tr>
				<td width="150px" style="background-color:#dedede"><com:TLiteral Text="<%#$this->data->org_name%>" /></td>
				<td>
			
					<!-- Organisation Level3 /-->
					
				<com:TRepeater ID="RepOrganisation3" OnItemDataBound="page.bindRepeaterOrganisation4" EnableViewState="false">
				
					<prop:HeaderTemplate>
						<table width="100%">
					</prop:HeaderTemplate>
					
					<prop:ItemTemplate>
						<tr style="background-color:#efefef">
							<td width="180px">Team:</td>
							<td><com:TLiteral Text="<%#$this->data->org_name%>" /></td>
						</tr>
					
						<tr><td colspan="2">
					
					<!-- Organisation Level4 /-->				
					
						<com:TRepeater ID="RepOrganisation4" EnableViewState="false">
						
							<prop:HeaderTemplate>
								<table width="100%">
								<thead>
									<tr>
										<td width="180">Name</td>
										<td width="180">Mail</td>
										<td>Rolle</td>
										<td>Esk. Stufe</td>
									</tr>
									<tr>
										<td colspan="4">Kommunikationsziel</td>
									</tr>
								</thead>
							</prop:HeaderTemplate>
							
							<prop:ItemTemplate>
							
							<tr style="background-color:#ffffff">
								<td><com:TLiteral Text="<%#$this->data->org_name%>" /></td>
								<td><com:TLiteral Text="<%#$this->data->org_mail%>" /></td>
								<td><com:TLiteral Text="<%#UserRoleRecord::finder()->findByPK($this->data->org_idtm_user_role)->user_role_name%>" /></td>
								<td><com:TLiteral Text="<%#$this->data->org_eskalation%>" /></td>
							</tr>
							<tr>
								<td colspan="4" style="border-bottom:1px double grey;"><com:TLiteral Text="<%#$this->data->org_kommunikation%>" /></td>
							</tr>
							
							</prop:ItemTemplate>
							
							<prop:FooterTemplate>
								</table>
							</prop:FooterTemplate>
							
						</com:TRepeater>
							
					<!-- Organisation Level4 /-->
					
					</td></tr>
					
					</prop:ItemTemplate>
					
					<prop:FooterTemplate>
						</table>
					</prop:FooterTemplate>
					
				</com:TRepeater>
						
			<!-- Organisation Level3 /-->
			
			<!-- Organisation Level5 nur falls es kein team gibt/-->
												
					
						<com:TRepeater ID="RepOrganisation4" EnableViewState="false">
						
							<prop:HeaderTemplate>
								<table width="100%">
								<thead>
									<tr>
										<td width="180">Name</td>
										<td width="180">Mail</td>
										<td>Rolle</td>
										<td>Esk. Stufe</td>
									</tr>
									<tr>
										<td colspan="4">Kommunikationsziel</td>
									</tr>
								</thead>
							</prop:HeaderTemplate>
							
							<prop:ItemTemplate>
							
							<tr style="background-color:#ffffff">
								<td><com:TLiteral Text="<%#$this->data->org_name%>" /></td>
								<td><com:TLiteral Text="<%#$this->data->org_mail%>" /></td>
								<td><com:TLiteral Text="<%#UserRoleRecord::finder()->findByPK($this->data->org_idtm_user_role)->user_role_name%>" /></td>
								<td><com:TLiteral Text="<%#$this->data->org_eskalation%>" /></td>
							</tr>
							<tr>
								<td colspan="4" style="border-bottom:1px double grey;"><com:TLiteral Text="<%#$this->data->org_kommunikation%>" /></td>
							</tr>
							
							</prop:ItemTemplate>
							
							<prop:FooterTemplate>
								</table>
							</prop:FooterTemplate>
							
						</com:TRepeater>
							
			<!-- Organisation Level5 /-->
					
			</td></tr>
			
			</prop:ItemTemplate>
			
			<prop:FooterTemplate>
				</table>
			</prop:FooterTemplate>
			
